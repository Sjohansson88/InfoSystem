@model InfoSystem.Models.Employee

<h1 class="text-center mb-4">Create Employee</h1>

<div class="container">
    <form asp-action="Create" class="row g-3">
        <div class="col-12">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name" style="width: 300px;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email" style="width: 300px;" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Password" class="form-label fw-bold"></label>
            <input asp-for="Password" type="password" class="form-control" style="width: 300px;" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>



        <div class="col-12">
            <label asp-for="Role" class="form-label fw-bold"></label>
            <input asp-for="Role" class="form-control" placeholder="Enter Employee role" style="width: 300px;" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex justify-content-start mt-4">
            <input type="submit" value="Create" class="btn btn-primary me-2" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
